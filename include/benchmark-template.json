{
  "apiVersion": "v1",
  "kind": "Template",
  "metadata": {
    "name": "benchmark"
  },
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "ReplicationController",
      "metadata": {
        "name": "benchmark-controller"
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "role": "benchmark",
          "type": "agent"
        },
        "template": {
          "metadata": {
            "labels": {
              "role": "benchmark",
              "type": "agent"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "benchmark-agent",
                "image": "enmasseproject/ebench-agent:latest",
                "ports": [
                  {
                    "name": "metrics",
                    "containerPort": 8080
                  }
                ],
                "env": [
                  {
                    "name": "BENCH_DURATION",
                    "value": "${DURATION}"
                  },
                  {
                    "name": "BENCH_MSG_SIZE",
                    "value": "${MESSAGE_SIZE}"
                  },
                  {
                    "name": "BENCH_ADDRESS",
                    "value": "${ADDRESS}"
                  },
                  {
                    "name": "BENCH_CLIENTS",
                    "value": "1"
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "apiVersion": "batch/v1",
      "kind": "Job",
      "metadata": {
        "name": "benchmark-collector"
      },
      "spec": {
        "template": {
          "metadata": {
            "name": "benchmark-collector",
            "labels": {
              "role": "benchmark",
              "type": "collector"
            }
          },
          "spec": {
            "restartPolicy": "OnFailure",
            "containers": [
              {
                "name": "benchmark-collector",
                "image": "enmasseproject/ebench-collector:latest",
                "ports": [
                  {
                    "name": "metrics",
                    "containerPort": 8080
                  }
                ],
                "env": [
                  {
                    "name": "BENCH_INTERVAL",
                    "value": "${REPORT_INTERVAL}"
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "name": "benchmark"
      },
      "spec": {
        "ports": [
          {
            "name": "metrics",
            "port": 8080,
            "targetPort": 8080,
            "protocol": "TCP"
          }
        ],
        "selector": {
          "role": "benchmark",
          "type": "collector"
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "DURATION",
      "description": "The duration of the benchmark",
      "value": "300"
    },
    {
      "name": "MESSAGE_SIZE",
      "description": "Size of messages",
      "value": "128"
    },
    {
      "name": "REPORT_INTERVAL",
      "description": "Interval between fetching reports from agents",
      "value": "30"
    },
    {
      "name": "ADDRESS",
      "description": "The address to use for messages"
    }
  ]
}
