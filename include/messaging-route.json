{
    "kind": "Route",
    "apiVersion": "v1",
    "metadata": {
        "name": "messaging"
    },
    "spec": {
        "host": "${MESSAGING_HOSTNAME}",
        "to": {
            "kind": "Service",
            "name": "messaging",
            "weight": 100
        },
        "port": {
            "targetPort": "amqps"
        },
        "tls": {
            "termination": "passthrough"
        }
    }
}
