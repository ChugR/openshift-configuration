[
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "configuration"
    },
    "spec": {
      "ports": [
        {
          "port": 5672,
          "protocol": "TCP",
          "targetPort": 5672
        }
      ],
      "selector": {
        "name": "configmap-bridge"
      }
    }
  },
  {
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
      "labels": {
        "name": "configmap-bridge"
      },
      "name": "configmap-bridge"
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "name": "configmap-bridge"
      },
      "template": {
        "metadata": {
          "labels": {
            "name": "configmap-bridge"
          }
        },
        "spec": {
          "containers": [
            {
              "image": "${CONFIGMAP_BRIDGE_IMAGE}",
              "name": "bridge",
              "ports": [
                {
                  "name": "amqp",
                  "containerPort": 5672
                }
              ]
            }
          ]
        }
      }
    }
  }
]
