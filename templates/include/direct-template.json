{
  "apiVersion": "v1",
  "kind": "Template",
  "metadata": {
    "name": "direct"
  },
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "ConfigMap",
      "metadata": {
        "name": "config-${ADDRESS}",
        "labels": {
          "type": "address-config"
        }
      },
      "data": {
        "address": "${ADDRESS}",
        "store-and-forward": "false",
        "multicast": "${MULTICAST}"
      }
    }
  ],
  "parameters": [
    {
      "name": "ADDRESS",
      "description": "The address to use for the address",
      "required": true
    },
    {
      "name": "MULTICAST",
      "description": "If the address should have multicast semantics or not",
      "required": true
    }
  ]
}
