[
  {
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
      "labels": {
        "name": "storage-controller"
      },
      "name": "storage-controller"
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "name": "storage-controller"
      },
      "template": {
        "metadata": {
          "labels": {
            "name": "storage-controller"
          }
        },
        "spec": {
          "serviceAccount": "deployer",
          "containers": [
            {
              "image": "${STORAGE_CONTROLLER_IMAGE}",
              "name": "master"
            }
          ]
        }
      }
    }
  }
]
